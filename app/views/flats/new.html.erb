<div class="container">
  <div class="d-flex flex-row">
    <div class="d-flex flex-row flex-wrap">
      <div class="col-12 m-auto">
        <div class="form">
          <h1>New Flat</h1>
          <%= form_for(@flat) do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_area :address, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :price_per_night %>
              <%= f.text_area :price_per_night, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :number_of_guests %>
              <%= f.text_area :number_of_guests, class: 'form-control' %>
            </div>

            <%= f.submit class: 'btn btn-primary' %>
          <% end %>

          <%= link_to 'Back', flats_path %>
        </div>
      </div>
    </div>
  </div>
</div>
